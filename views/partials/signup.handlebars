<script type="text/x-handlebars" data-template-name="signup-modal">
    {{!-- Modal --}}
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                \{{template "signup"}}
             </div>
        </div>
    </div>
</script>

<script type="text/x-handlebars" data-template-name="signup">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign up</h4>
    </div>
    <div class="modal-body">
        {{!-- sig--}}
        \{{#if errorMessage}}
            <div class="alert alert-danger" role="alert">\{{errorMessage}}</div>
        \{{/if}}

        <form class="form-signin" role="form" \{{action signup on="submit"}}>
            \{{input class="form-control" name="email" valueBinding="email" type="text" placeholder="Email address" required="required" autofocus="autofocus"}}
            <p></p>
            \{{input class="form-control" name="password" valueBinding="password" type="password" placeholder="Password" required="required"}}
            <br>
            <button class="btn btn-lg btn-primary btn-block">Sign up</button>
        </form>
        <br><br><br>
        {{!-- batton "Sign in with Google account"--}}
        <a href="/auth/google/" class="btn btn-primary btn-large">Sign up with Google account</a>
    </div>
</script>