<div class="sidebar_tabs">
    <ul class="nav nav-tabs" role="tablist">
        {{#link-to "dashboard.organization.workspace.jobs" tagName="li"}}<span>Jobs</span>{{/link-to}}
        {{#link-to "dashboard.organization.workspace.connections" tagName="li"}}<span>Connections</span>{{/link-to}}
    </ul>
    <div class="btn-group">
        {{#link-to "dashboard.organization.workspace.connections.new" classNames="btn btn-default"}}<i class="fa fa-plus"></i>Add Connection{{/link-to}}
        <button type="button" class="btn btn-default"><i class="fa fa-filter"></i></button>
        <button type="button" class="btn btn-default"><i class="fa fa-search"></i></button>
    </div>
</div>
<div class="sidebar">
    {{#each}}
        <div class="menu-tabs">
          {{#link-to "dashboard.organization.workspace.connections.connection" this tagName="div" activeClass="active-job"}}
            <div {{bind-attr class=":row archived:archived-job"}}>
                <div class="col-xs-2">
                    <span></span>
                </div>
                <div class="col-xs-9">
                    <p class="title">{{name}}</p>
                </div>
            </div>
          {{/link-to}}
        </div>
    {{/each}}
</div>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
    <div class="main">
      {{outlet}}
    </div>
</div>