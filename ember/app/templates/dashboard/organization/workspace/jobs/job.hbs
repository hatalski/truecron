<div class="col-sm-12">
    <div class="row">
        <div class="col-sm-7">
          <h3><span class="job-name" data-toggle="tooltip" data-placement="bottom" title="Rename">{{name}}</span><h3>
        </div>
        <div class="col-sm-5" align="right">
            <h3>
            <a href="#">
            {{#if this.active}}
                <u>ACTIVE</u>
            {{else}}
                <u>INACTIVE</u>
            {{/if}}
            </a>
            </h3>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-2">
            <button {{action "runjob"}} type="button" class="chok"><i class="fa fa-play"></i> Run Job</button>
        </div>
        <div class="col-sm-6">
          <h4 class="blue_row">{{recurrence.text}}</h4>
          <div>Ends after 5 runs</div>
        </div>
        <div class="col-sm-2">
            <h4>LAST RUN</h4>
            <div>{{format-date recurrence.lastRun 'L LT'}}</div>
        </div>
        <div class="col-sm-2">
            <h4>NEXT RUN</h4>
            <div>{{format-date recurrence.nextRun 'L LT'}}</div>
        </div>
    </div>
