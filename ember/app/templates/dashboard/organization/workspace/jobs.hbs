<div class="sidebar_tabs">
    <ul class="nav nav-tabs" role="tablist">
        {{#link-to "dashboard.organization.workspace.jobs" tagName="li"}}<span>Jobs</span>{{/link-to}}
        {{#link-to "dashboard.organization.workspace.connections" tagName="li"}}<span>Connections</span>{{/link-to}}
    </ul>
    <div class="btn-group">
        <a href="#" class="btn btn-default" {{action "addjob"}}><i class="fa fa-plus"></i>Add Job</a>
        <button type="button" class="btn btn-default"><i class="fa fa-filter"></i></button>
        <button type="button" class="btn btn-default"><i class="fa fa-search"></i></button>
    </div>
</div>
<div class="sidebar">
{{#each job in controller}}
    <div class="menu-tabs">
      {{#link-to "dashboard.organization.workspace.jobs.job" job tagName="div" activeClass="active-job"}}
        <div {{bind-attr class=":row job.archived:archived-job job.running:running-job"}}>
            <div class="col-xs-2">
                {{#if job.lastRunError}}
                    <i class="fa fa-exclamation-circle fa-5"></i>
                {{else}}
                    <span></span>
                {{/if}}
            </div>
            <div class="col-xs-9">
                <p class="title">{{job.name}}</p>
                <p>last: {{time-from job.recurrence.lastRun}}</p>
                <p>next: {{time-from job.recurrence.nextRun}}</p>
            </div>
        </div>
      {{/link-to}}
    </div>
{{else}}
  {{#if ishidesidebar}}
        No jobs
  {{/if}}
{{/each}}
    <a href="#" class="btn btn-default, hidesidebar" {{action "hidesidebar"}}><<</a>
</div>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
    <div class="main cron-main">
      {{outlet}}
    </div>
</div>

