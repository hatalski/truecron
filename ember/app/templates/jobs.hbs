{{render 'navigation'}}
<div class="container-fluid">
    <div class="row">
        <div class="sidebar_tabs">
            <ul class="nav nav-tabs" role="tablist">
                {{link-to 'Jobs' (query-params tab="jobslist")}}
                {{link-to 'Connections' (query-params tab="connectionslist")}}
                <li class="active">
                    <a {{action "showJobs"}}><span>Jobs</span></a>
                </li>
                <li>
                    <a {{action "showConnections"}}><span>Connections</span></a>
                </li>
            </ul>
            <div class="btn-group">
                {{#link-to "jobs.new" classNames="btn btn-default"}}<i class="fa fa-plus"></i>Add Job{{/link-to}}
                <button type="button" class="btn btn-default"><i class="fa fa-filter"></i></button>
                <button type="button" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
        </div>
        {{render tab this}}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
            <div class="main">
              {{outlet}}
            </div>
        </div>
    </div>
</div>
