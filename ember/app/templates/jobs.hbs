<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"></a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
				    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Personal - Development <span class="caret"></span></a>
				    <ul class="dropdown-menu" role="menu">
				    	{{#each organization in organizations}}
				    		<li class="dropdown-header">{{organization.name}}</li>
				    		{{#each workspace in organization.workspaces}}
				    		<li>{{#link-to "jobs" organization workspace}}{{workspace.name}}{{/link-to}}</li>
				    		{{/each}}
				    	{{/each}}
				    </ul>
				</li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{name}}<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>{{#link-to "profile"}}My Profile{{/link-to}}</li>
                        <li class="divider"></li>
                        <li><a href="#" {{action "signout" target="controllers.signin"}}><i class="fa fa-sign-out"></i> Sign out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="sidebar_tabs">
            <ul class="nav nav-tabs" role="tablist">
                {{#link-to (query-params tab="jobslist") tagName="li"}}<span>Jobs</span>{{/link-to}}
                {{#link-to (query-params tab="connectionslist") tagName="li"}}<span>Connections</span>{{/link-to}}
            </ul>
            <div class="btn-group">
                {{#link-to "jobs" classNames="btn btn-default"}}<i class="fa fa-plus"></i>Add Job{{/link-to}}
                <button type="button" class="btn btn-default"><i class="fa fa-filter"></i></button>
                <button type="button" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
            <div class="main">
              {{outlet}}
            </div>
        </div>
    </div>
</div>