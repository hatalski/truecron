<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"></a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{choosen}} <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        {{#each organization in model.organizations}}
                            <li class="dropdown-header">{{organization.name}}</li>
                            {{#each workspace in organization.workspaces}}
                            <li><a href="#" {{action "changeWorkspace" organization workspace}}>{{workspace.name}}</a>
                            </li>
                            {{/each}}
                        {{/each}}
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{model.user.name}}<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>{{#link-to "profile"}}<i class="fa fa-user"></i> My Profile{{/link-to}}</li>
                        <li class="divider"></li>
                        <li><a href="#" {{action "invalidateSession"}}><i class="fa fa-sign-out"></i> Sign out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        {{outlet}}
    </div>
</div>