<div class="modal fade" id="signup_modal" tabindex="-1" role="dialog" aria-labelledby="signUpTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!--<div class="modal-header">-->
                <!--<h4 class="modal-title" id="signUpTitle"></h4>-->
            <!--</div>-->
            <div class="modal-body signup">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <div class="container-fluid">
                    <div class="signup_logo"></div>
                    <form {{action "globalsignup" on="submit"}}>
                      <h2>Sign Up</h2>

                      <div {{bind-attr class=":form-group isEmailError:has-error"}}>
                        <label for='email'>Email:</label>
                        {{input value=signupEmail valueBinding=signupEmail type="email" placeholder="Email" required="required" class="form-control"}}
                      </div>

                      <div {{bind-attr class=":form-group isPasswordError:has-error"}}>
                        <label for='password'>Create password:</label>
                        {{input type="password" value=signupPassword valueBinding=signupPassword min=8 id='password' placeholder="Should be minimum of 8 characters in length" required="required" class="form-control"}}
                      </div>

                      <div {{bind-attr class=":form-group isPasswordConfirmError:has-error"}}>
                        <label for='password-confirmation'>Confirm your password:</label>
                        {{input type="password" value=signupPasswordConfirm valueBinding=signupPasswordConfirm id='password-confirmation' placeholder="Enter password again" class="form-control"}}
                      </div>

                      <p><input type="button" {{action "signup"}} class="btn btn-signup" value="SIGN UP"></p>
                    </form>
                </div>
            </div>
            <!--<div class="modal-footer">-->
                <!--<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>-->
            <!--</div>-->
        </div>
    </div>
</div>
