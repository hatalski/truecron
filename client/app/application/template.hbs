{{#if session.isAuthenticated}}
<div class="navbar navbar-fixed-top navbar-material-blue-grey-800" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand navbar-brand-truecron" href="/"></a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Development <span class="caret truecron-caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                        <li class="divider"></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown cron">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      {{gravatar-image email=session.userEmail size=20 default='identicon' class='img-circle' }}
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>{{#link-to "profile"}}<i class="fa fa-user"></i> My Profile{{/link-to}}</li>
                        <li class="divider"></li>
                        <li><a href="#" {{action "invalidateSession"}}><i class="fa fa-sign-out"></i> Sign out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
{{else}}
<div class="navbar navbar-fixed-top navbar-material-blue-grey-700" role="navigation">
    <div class="container teaser">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand navbar-brand-teaser" href="#"></a>
        </div>
        <div class="navbar-collapse collapse">
          {{#unless hideSignUpButton}}
            <form class="navbar-form navbar-right teaser-form" style="border-left: solid 1px #ff4e00">
                <input type="button" {{action "redirectToSignup"}} class="btn btn-material-orange-800" value="SIGN UP">
            </form>
            <form class="navbar-form navbar-right teaser-form">
                <input type="button" {{action "redirectToSignin"}} class="btn btn-signin btn-white" value="SIGN IN">
            </form>
          {{/unless}}
        </div>
    </div>
</div>
{{/if}}
{{outlet}}
