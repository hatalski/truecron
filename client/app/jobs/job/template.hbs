<header class="job-details-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group-material-orange-700">
                    <h3 class="content-title-margin">{{input id="jobName" type="text" value=model.name class="form-control input-xl" placeholder="Name of the job"}}</h3>
                </div>
            </div>
            <div class="col-md-1">
                <span class="btn btn-sm btn-material-blue-grey-400"><i class="fa fa-trash fa-lg"></i></span>
            </div>
          <div class="col-md-1">
              <h4 class="text-right truecron-grey hidden-sm hidden-xs">Run:</h4>
              <h4 class="truecron-grey hidden-lg hidden-md">Run:</h4>
          </div>
            <div class="col-md-5">
                <h4 class="truecron-orange">Weekly on Monday, Friday, Thuesday, Sunday, Wensday at 12:32:00 PM</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{job-tags job=model action="addJobTag"}}
                {{!--<h5>Triggered by <span class="truecron-grey">Vitali Hatalski</span> on <span class="truecron-grey">July 5</span> at <span class="truecron-grey">12:32:00 AM PST,</span> time <span class="truecron-grey">0.68s</span></h5>--}}
            </div>
            <div class="col-md-1">
                <h4 class="text-right truecron-grey hidden-sm hidden-xs">Exclusions:</h4>
                <h4 class="truecron-grey hidden-md hidden-lg">Exclude:</h4>
            </div>
            <div class="col-md-5">
                <h4 class="truecron-orange">Sunday 8 March 2015</h4>
            </div>
            <div class="col-md-1">
                <h4 class="text-right truecron-grey hidden-sm hidden-xs">Last run:</h4>
                <h4 class="truecron-grey hidden-md hidden-lg">Last run:</h4>
            </div>
            <div class="col-md-2">
                <h4>July 6 12:32:00 PM</h4>
            </div>
            <div class="col-md-1">
                <h4 class="text-right truecron-grey hidden-sm hidden-xs">Next run:</h4>
                <h4 class="truecron-grey hidden-md hidden-lg">Next run:</h4>
            </div>
            <div class="col-md-2">
                <h4>July 8 12:32:00 PM</h4>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 text-left">
            <a class="btn btn-material-blue-grey-400" {{action 'runJob'}}>Run Job</a>
        </div>
        <div class="col-sm-6 text-right">
            <a class="btn btn-material-orange-800" {{action 'addTask'}}>New Task</a>
        </div>
    </div>
    {{#if showNewTaskForm}}
      {{task-new-item task=newTask onCreate="createTask" onCancel="cancelTaskCreation"}}
    {{/if}}
    <div class="panel-group truecron-accordion" id="accordion" role="tablist" aria-multiselectable="true">
        {{#each task in model.tasks}}
          {{task-list-item task=task}}
        {{else}}
          <p>No tasks</p>
        {{/each}}
    </div>
</div>
{{outlet}}
