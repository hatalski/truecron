{{#sidebar-hide condition=invisibleSidebar}}
    <aside class="sidebar col-xs-5 col-sm-4 col-md-3 col-lg-3"
           data-spy="affix" data-offset-top="50">
        <div class="panel panel-material-blue-grey-50">
            <div class="container-fluid">
                <div class="row">
                    <div class="panel panel-material-grey-100 truecron-side-panel">
                        <div class="panel-heading truecron-panel-heading" role="tab" id="jobsHeader">
                            <div class="row">
                                <div class="col-xs-12 text-right">
                                    {{#if showJobDetails}}
                                        <a href="#" class="btn btn-flat btn-raised btn-block btn-material-orange-800" {{action 'backToJobsList'}}><i class="fa fa-angle-left"></i> Back to Jobs</a>
                                    {{else}}
                                        <a href="#" class="btn btn-raised btn-block btn-material-orange-800" {{action 'newJobClicked'}}>Add New Job</a>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        <div id="collapseJobFilter" class="panel-collapse collapse" role="tabpanel" aria-labelledby="jobsHeader" aria-expanded="true">
                            <ul class="list-group">
                                <li class="list-group-item truecron-sub-filter">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <p class="form-control-static">Filter by name:</p>
                                        </div>
                                        <div class="col-xs-6">
                                            <p class="form-control-static">Filter by tag:</p>
                                        </div>
                                        <div class="col-xs-6">
                                            <div class="form-group-material-orange-700">
                                                <input type="text" class="form-control truecron-form-control">
                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            <div class="form-group-material-orange-700">
                                                <input type="text" class="form-control truecron-form-control">
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
          {{#if showJobDetails}}
              <div class="list-group">
                  {{#if newJob}}
                    {{job-list-item job=newJob selected=newJob linkTo='jobs.job' action='selectJob'}}
                  {{/if}}
                  {{#if selectedJob}}
                    {{job-list-item job=selectedJob selected=selectedJob linkTo='jobs.job' action='selectJob'}}
                  {{/if}}
              </div>
              <div class="panel panel-material-grey-100 panel-without-margin">
                  <div class="panel-heading truecron-panel-heading" role="tab" id="collapseRunHistoryHeading">
                      <div class="row">
                          <div class="col-xs-9">
                              <h4 class="panel-title sidebar-panel-title">
                                  <a data-toggle="collapse" href="#collapseListGroup1" aria-expanded="true" aria-controls="collapseListGroup1">
                                      <p class="truecron-tab-p"><span class="caret truecron-caret"></span>Runs</p>
                                  </a>
                              </h4>
                          </div>
                          <div class="col-xs-3 text-right">
                              <a class="btn btn-sm btn-flat btn-material-blue-grey-400 truecron-panel-btn"
                                 data-toggle="collapse" href="#collapseRunHistoryFilter" aria-expanded="true" aria-controls="collapseRunHistoryFilter">
                                  <i class="fa fa-filter fa-lg"></i>
                              </a>
                          </div>
                      </div>
                  </div>
                  <div id="collapseRunHistoryFilter" class="panel-collapse collapse" role="tabpanel" aria-labelledby="collapseRunHistoryHeading" aria-expanded="true">
                      <ul class="list-group">
                          <li class="list-group-item">
                              <div class="row">
                                  <div class="col-xs-12">
                                      <p class="form-control-static">Date Range</p>
                                  </div>
                                  <div class="col-xs-6">
                                      <div class="form-group-material-orange-700">
                                          <input type="date" class="form-control truecron-form-control">
                                      </div>
                                  </div>
                                  <div class="col-xs-6">
                                      <div class="form-group-material-orange-700">
                                          <input type="date" class="form-control truecron-form-control">
                                      </div>
                                  </div>
                                  <div class="col-xs-12">
                                      <p class="form-control-static">Triggered by</p>
                                  </div>
                                  <div class="col-xs-6">
                                      <div class="form-group-material-orange-700">
                                          <select class="form-control">
                                              <option value="1">Vitali Hatalski</option>
                                              <option value="2">Andrew Kasatkin</option>
                                              <option value="3">Paul Shmakov</option>
                                          </select>
                                      </div>
                                  </div>
                              </div>
                          </li>
                      </ul>
                  </div>
                  <div id="collapseListGroup1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="collapseListGroupHeading1" aria-expanded="true">
                      <ul class="list-group">
                          <li class="list-group-item truecron-sub-menu">
                              <div class="row">
                                  <div class="col-xs-12 no-padding">
                                      <table class="table table-hover sidebar-table">
                                          <thead class="truecron-table-header">
                                              <tr>
                                                  <th class="hidden-sm hidden-xs hidden-md"><span class="truecron-sidebar-padding">Triggered</span><i class="fa fa-sort"></i></th>
                                                  <th><span class="truecron-sidebar-padding">Date</span><i class="fa fa-sort-desc"></i></th>
                                                  <th>Duration<i class="fa fa-sort"></i></th>
                                              </tr>
                                          </thead>
                                          <tbody>
                                              {{#each run in selectedJob.runs}}
                                                  {{run-list-item item=run}}
                                              {{else}}
                                                  <td colspan="3"><h5 class="truecron-sidebar-table-element-padding">Job's never been run</h5></td>
                                              {{/each}}
                                          </tbody>
                                      </table>
                                  </div>
                              </div>
                          </li>
                      </ul>
                  </div>
              </div>
              <div class="panel panel-material-grey-100 panel-without-margin">
                  <div class="panel-heading truecron-panel-heading truecron-panel-border" role="tab" id="collapseRevisionHeading">
                      <div class="row">
                          <div class="col-xs-9">
                              <h4 class="panel-title sidebar-panel-title">
                                  <a data-toggle="collapse" href="#collapseRevisionsTable" aria-expanded="true" aria-controls="collapseRevisionsTable">
                                      <p class="truecron-tab-p"><span class="caret truecron-caret"></span>Revisions</p>
                                  </a>
                              </h4>
                          </div>
                          <div class="col-xs-3 text-right">
                              <a class="btn btn-sm btn-flat btn-material-blue-grey-400 truecron-panel-btn"
                                 data-toggle="collapse" href="#collapseRevisionFilter" aria-expanded="true" aria-controls="collapseRevisionFilter">
                                  <i class="fa fa-filter fa-lg"></i>
                              </a>
                          </div>
                      </div>
                  </div>
                  <div id="collapseRevisionFilter" class="panel-collapse collapse" role="tabpanel" aria-labelledby="collapseRevisionHeading" aria-expanded="true">
                      <ul class="list-group">
                          <li class="list-group-item">
                              <div class="row">
                                  <div class="col-xs-12">
                                      <p class="form-control-static">Dates</p>
                                  </div>
                                  <div class="col-xs-6">
                                      <div class="form-group-material-orange-700">
                                          <input type="date" class="form-control truecron-form-control">
                                      </div>
                                  </div>
                                  <div class="col-xs-6">
                                      <div class="form-group-material-orange-700">
                                          <input type="date" class="form-control truecron-form-control">
                                      </div>
                                  </div>
                                  <div class="col-xs-12">
                                      <p class="form-control-static">Changed</p>
                                  </div>
                                  <div class="col-xs-6">
                                      <div class="form-group-material-orange-700">
                                          <select class="form-control">
                                              <option value="1">Vitali Hayalski</option>
                                              <option value="2">Vitaly Vinichenko</option>
                                              <option value="3">Paul Shmakov</option>
                                              <option value="4">Andrew Kasatkin</option>
                                          </select>
                                      </div>
                                  </div>
                              </div>
                          </li>
                      </ul>
                  </div>
                  <div id="collapseRevisionsTable" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="collapseRevisionHeading" aria-expanded="true">
                      <ul class="list-group">
                          <li class="list-group-item truecron-sub-menu">
                              <div class="row">
                                  <div class="col-xs-12 no-padding">
                                      <table class="table table-hover sidebar-table">
                                          <thead class="truecron-table-header">
                                            <tr>
                                                <th class="hidden-sm hidden-xs hidden-md"><span class="truecron-sidebar-padding">Changed</span><i class="fa fa-sort"></i></th>
                                                <th>Date<i class="fa fa-sort-desc"></i></th>
                                                <th>Rev#<i class="fa fa-sort"></i></th>
                                            </tr>
                                          </thead>
                                          <tbody>
                                          {{#each history in selectedJob.history}}
                                              {{history-list-item item=history}}
                                          {{else}}
                                              <td colspan="3"><h5 class="truecron-sidebar-table-element-padding">Job has not been created yet</h5></td>
                                          {{/each}}
                                          </tbody>
                                      </table>
                                  </div>
                              </div>
                          </li>
                      </ul>
                  </div>
              </div>
          {{else}}
              <div class="list-group">
                {{#each job in model.workspace.jobs}}
                    {{job-list-item job=job linkTo='jobs.job' selected=selectedJob action='selectJob'}}
                {{/each}}
              </div>
          {{/if}}
        </div>
    </aside>
{{/sidebar-hide}}
<div class="container-fluid no-padding">
    <section class="col-xs-offset-5 col-sm-offset-4 col-md-offset-3 col-xs-7 col-sm-8 col-md-9 col-lg-9 no-padding">
      {{outlet}}
    </section>
</div>