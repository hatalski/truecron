<div class="container fluid container-truecron">
    <br>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-material-blue-grey-200">
                <div class="panel-heading truecron-panel-heading">
                    <div class="row">
                        <div class="col-md-9">
                            <h3 class="panel-title truecron-panel-title">My Profile</h3>
                        </div>
                        <div class="col-md-3 text-right">
                            <h3 class="panel-title">
                              {{#if isEditNAme}}
                                  <a class="btn btn-material-orange-800 text-right truecron-panel-btn" {{action 'saveNameAndEmail'}}>Save</a>
                                  <a class="btn btn-material-blue-grey-400 text-right truecron-panel-btn" {{action 'cancelNameAndEmail'}}>cancel</a>
                              {{else}}
                                  <a class="btn btn-material-blue-grey-400 text-right truecron-panel-btn" {{action 'editNameAndEmail'}}>EDIT</a>
                              {{/if}}
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="panel-body truecron-panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            <h5>Email</h5>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group-material-orange-700">
                                <div class="form-control-wrapper">
                                    <label>
                                        {{#each userEmail in model.emails}}
                                            <span id="firstEmail">{{userEmail.email}}</span>
                                        {{/each}}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <h5>Name</h5>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group-material-orange-700">
                                <div class="form-control-wrapper">
                                    <label>
                                        {{input id="userName"
                                        type="text"
                                        value=model.name
                                        disabled=isNotEditName
                                        class="form-control empty"
                                        data-hint="Enter user name"}}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-material-blue-grey-200">
                <div class="panel-heading truecron-panel-heading">
                    <div class="row">
                        <div class="col-md-9">
                            <h3 class="panel-title truecron-panel-title">Password</h3>
                        </div>
                        <div class="col-md-3 text-right">
                            <h3 class="panel-title">
                              {{#if isEditPassword}}
                                  <a class="btn btn-material-orange-800 text-right truecron-panel-btn" {{action 'savePassword'}}>Save</a>
                                  <a class="btn btn-material-blue-grey-400 text-right truecron-panel-btn" {{action 'cancelEditPassword'}}>cancel</a>
                              {{else}}
                                  <a class="btn btn-material-blue-grey-400 text-right truecron-panel-btn" {{action 'editPassword'}}>EDIT</a>
                              {{/if}}
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="panel-body truecron-panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            <h5>Password</h5>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group-material-orange-700">
                                <div class="form-control-wrapper">
                                    {{input id="password"
                                        type="password"
                                        value=model.password
                                        disabled=isNotEditPassword
                                        class="form-control empty"
                                        required=true
                                        placeholder="Password (more than 8 characters in length)"
                                        pattern="(?=^.{8,}$)(?=.*\d)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <h5>Password Confirmation</h5>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group-material-orange-700">
                                <div class="form-control-wrapper">
                                  {{input id="inputConfirmPassword"
                                  data-hint="Enter password again"
                                  type="password"
                                  value=passwordConfirm
                                  placeholder="Confirm password"
                                  disabled=isNotEditPassword
                                  class="form-control empty"
                                  pattern="(?=^.{8,}$)(?=.*\d)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                                  }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
