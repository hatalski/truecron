<div class="row">
    <div class="col-xs-10">
        <h5 class="list-group-item-heading">{{job.name}}</h5>
    </div>
    <div {{bind-attr class=":col-xs-2 :text-right jobStateColorClass"}}>
        <span><i {{bind-attr class=":fa jobStateIconClass" title="jobStateIconTitle"}}></i></span>
    </div>
</div>
<p class="list-group-item-text truecron-job-item-p">schedule: <span class="truecron-job-item-span">{{recurrence.text}}</span></p>
<p class="list-group-item-text truecron-job-item-p">last run: <span class="truecron-job-item-span">{{recurrence.lastRun}}</span></p>
<p class="list-group-item-text truecron-job-item-p">time left to next run: <span class="truecron-job-item-span">{{recurrence.nextRun}}</span></p>
<p class="list-group-item-text">
  {{#each tag in job.tags}}
      <span class="label truecron-job-label">{{tag.name}}</span>
  {{/each}}
</p>
{{yield}}