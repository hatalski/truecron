<div class="panel panel-material-grey-100">
    <div class="panel-heading truecron-first-heading" role="tab" id="task{{task.id}}">
        <div class="row" data-toggle="collapse" data-parent="#accordion" href="#collapseTask{{task.id}}" aria-expanded="true" aria-controls="collapseTask{{task.id}}">
            <div class="col-md-1">
                <i class="fa fa-bars"></i>
            </div>
            <div class="col-md-1 text-center">
                <p>{{task.taskType.name}}</p>
            </div>
            <div class="col-md-3 text-center">
                <p>{{task.name}}</p>
            </div>
            <div class="col-md-4 text-center">
                <p>564 files were removed</p>
            </div>
            <div class="col-md-2 text-center trucron-underline">
                <p>0.68 sec</p>
            </div>
            <div class="col-md-1 text-right">
                <i class="fa fa-square"></i>
            </div>
        </div>
    </div>
    <div id="collapseTask{{task.id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="task{{task.id}}">
        <div class="panel-body truecron-panel-body">
            <p>rm myFile.txt myFile1.txt myFile2.txt …etc…</p>
            <p>rm myFile*.txt</p>
            <p>rm -rf foldername</p>
            <p>rm -rf *</p>
            <p class="text-right">Download Full Log <a class="btn btn-sm btn-material-blue-grey-400"><i class="fa fa-download"></i> </a></p>
        </div>
    </div>
</div>
{{yield}}
