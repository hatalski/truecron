<div class="panel panel-material-grey-100">
    <div class="panel-heading truecron-first-heading truecron-task-panel-heading" role="tab" id="task{{task.id}}">
        <div class="row" data-toggle="collapse" data-parent="#accordion" href="#collapseTask{{task.id}}" aria-expanded="true" aria-controls="collapseTask{{task.id}}">
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                <i class="fa fa-bars"></i>
            </div>
            <div class="hidden-xs hidden-sm col-md-1 col-lg-1 text-center">
                <p>{{task.taskType.name}}</p>
            </div>
            <div class="col-xs-9 col-sm-7 col-md-7 col-lg-3 text-center">
                <p>{{task.name}}</p>
            </div>
            <div class="hidden-xs hidden-sm hidden-md col-lg-4 text-center">
                <p>no output</p>
            </div>
            <div class="hidden-xs col-sm-3 col-md-2 col-lg-2 text-center trucron-underline">
                <p>Never run</p>
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 text-right">
                <i class="fa fa-square neverrun-job" title="Task was never run"></i>
            </div>
        </div>
    </div>
    <div id="collapseTask{{task.id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="task{{task.id}}">
        <div class="navbar navbar-material-blue-grey-200 sidebar-table truecron-navbar">
            <div class="navbar-collapse collapse navbar-material-blue-grey-collapse">
                <ul class="nav navbar-nav truecron-tasks-nav">
                    <li class="active"><a href="#output{{task.id}}" aria-controls="output{{task.id}}" role="tab" data-toggle="tab">Output</a></li>
                    <li><a href="#settings{{task.id}}" aria-controls="settings{{task.id}}" role="tab" data-toggle="tab">Settings</a></li>
                </ul>
            </div>
        </div>
      <div class="tab-content">
        <div role="tabpanel" class="panel-body truecron-panel-body tab-pane active" id="output{{task.id}}"  >
            <p>rm myFile.txt myFile1.txt myFile2.txt …etc…</p>
            <p>rm myFile*.txt</p>
            <p>rm -rf foldername</p>
            <p>rm -rf *</p>
            <p class="text-right">Download Full Log <a class="btn btn-sm btn-material-blue-grey-400"><i class="fa fa-download"></i> </a></p>
        </div>
        <div role="tabpanel" class="panel-body truecron-panel-body tab-pane" id="settings{{task.id}}">
                <div class="row">
                    <br>
                    <div class="col-md-2 text-right">
                        <h5><strong>Type:</strong></h5>
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group-material-orange-700">
                            <select class="form-control">
                                <option>Delete files</option>
                                <option>Archive files</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5><strong>Connections:</strong></h5>
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group-material-orange-700">
                            <select class="form-control">
                                <option>Local</option>
                                <option>Remote</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <br>
                    <div class="col-md-2 text-right">
                        <h5><strong>Folders:</strong></h5>
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group-material-orange-700">
                            <select class="form-control">
                                <option>local</option>
                                <option>remote</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 text-right">
                        <h5><strong>File mask:</strong></h5>
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group-material-orange-700">
                            <div class="form-group-material-orange-700">
                                <input id="maskType" type="text" value="" class="form-control floating-label" placeholder="*.*" data-hint="Choose the mask">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-offset-7 col-md-3">
                        <div class="checkbox checkbox-material-orange-700">
                            <label>
                                <input type="checkbox" checked=""> <strong>Delete my empty folders</strong>
                            </label>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-2 text-right">
                        <h5><strong>Failure conditions:</strong></h5>
                    </div>
                    <div class="col-md-1 text-center">
                        <div class="checkbox checkbox-material-orange-700 truecron_checkbox">
                            <label>
                                <input type="checkbox">
                            </label>
                        </div>
                    </div>
                    <div class="col-md-1 text-left">
                        <h5><strong>timeout:</strong></h5>
                    </div>
                    <div class="col-md-2 text-left">
                        <div class="form-group-material-orange-700">
                            <select class="form-control">
                                <option>10 seconds</option>
                                <option>20 seconds</option>
                                <option>30 seconds</option>
                                <option>40 seconds</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-material-orange-800 truecron-panel-btn">SAVE</a>
                        </div>
                        <div class="btn-group">
                            <a class="btn btn-sm btn-material-blue-grey-400 truecron-panel-btn">CANCEL</a>
                        </div>
                    </div>
                </div>
        </div>
      </div>
    </div>
</div>
{{yield}}
