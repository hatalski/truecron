<div class="container-fluid container-truecron">
      <div class="row">
          <div class="col-md-offset-4 col-md-4">
              <h2 class="text-center">{{format-message (intl-get "messages.auth.signup_form.header")}}</h2>
              <hr/>
          </div>
      </div>
      <div class="row">
          <div class="col-md-offset-4 col-md-4">
              <a class="btn btn-lg btn-block btn-primary" {{action 'googleLogin'}}><i class="fa fa-google"></i> {{format-message (intl-get "messages.auth.googleButton")}}</a>
          </div>
      </div>
      <div class="row">
          <div class="col-md-offset-4 col-md-4">
              <h4 class="text-center">{{format-message (intl-get "messages.auth.or")}}</h4>
          </div>
      </div>
      <div class="row">
          <div class="col-md-offset-4 col-md-4">
              <form {{action "signup" on="submit"}}>
                  <div {{bind-attr class=":form-group isEmailError:has-error"}}>
                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                          {{input id="email"
                          value=signupEmail
                          valueBinding="signupEmail"
                          type="email"
                          placeholder="Email"
                          required="required"
                          class="form-control input-lg"}}
                      </div>
                  </div>
                  <div {{bind-attr class=":form-group isPasswordError:has-error"}}>
                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        {{input title="Password must contain at least 8 characters, including UPPER/lowercase and numbers."
                          type="password"
                          value=signupPassword
                          valueBinding="password"
                          placeholder="Password (more than 8 characters in length)"
                          required="required"
                          class="form-control input-lg"
                          pattern="(?=^.{8,}$)(?=.*\d)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" }}
                      </div>
                  </div>
                  <div {{bind-attr class=":form-group isPasswordConfirmError:has-error"}}>
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key"></i></span>
                        {{input type="password"
                        value=signupPasswordConfirm
                        valueBinding="passwordConfirm"
                        placeholder="Enter password again"
                        class="form-control input-lg"}}
                      </div>
                  </div>
                  <div class="form-group">
                      <div class="input-group-btn">
                          <button type="submit" class="btn btn-lg btn-block btn-signup">{{format-message (intl-get "messages.auth.signup_form.button")}}</button>
                      </div>
                  </div>
                  <div>
                      <h6 class="text-center">{{format-message (intl-get "messages.auth.signup_form.warning")}} {{#link-to 'policy.eula'}}{{format-message (intl-get "messages.auth.signup_form.terms")}}{{/link-to}} and {{#link-to 'policy.privacy'}}{{format-message (intl-get "messages.auth.signup_form.privacy")}}{{/link-to}}.</h6>
                  </div>
              </form>
          </div>
      </div>
      <div class="row">
          <div class="col-md-offset-4 col-md-4">
              <h4 class="text-center">{{format-message (intl-get "messages.auth.signup_form.accountExists")}} {{#link-to 'signin'}}{{format-message (intl-get "messages.auth.signup_form.signinLink")}}{{/link-to}}.</h4>
          </div>
      </div>
</div>
