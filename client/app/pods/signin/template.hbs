<div class="container-fluid container-truecron">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <h2 class="text-center">{{format-message (intl-get "messages.auth.signin_form.header")}}</h2>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <a class="btn btn-lg btn-block btn-primary" {{action 'googleLogin'}}><i class="fa fa-google"></i> {{format-message (intl-get "messages.auth.googleButton")}}</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <h4 class="text-center">{{format-message (intl-get "messages.auth.or")}}</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <form {{action 'authenticate' on='submit'}}>
              <div {{bind-attr class=":form-group isLoginError:has-error"}}>
                  <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                    {{input id="loginEmail"
                      class="form-control input-lg"
                      type="email"
                      value=identification
                      placeholder="Email"
                      required="required"}}
                  </div>
              </div>
              <div {{bind-attr class="isLoginError:has-error"}}>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                  {{input id="loginPassword"
                    class="form-control input-lg"
                    type="password"
                    value=password
                    placeholder="Password"
                    required="required"}}
                </div>
              </div>
              <div class="">
                  <div class="text-center">{{#link-to 'forgot' class="btn btn-lg"}}{{format-message (intl-get "messages.auth.signin_form.forgottenPassword")}}{{/link-to}}</div>
              </div>
              <div class="form-group">
                  <div class="input-group-btn">
                      <button type="submit" class="btn btn-lg btn-block btn-signup">{{format-message (intl-get "messages.auth.signin_form.button")}}</button>
                  </div>
              </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <h4 class="text-center">{{format-message (intl-get "messages.auth.signin_form.accountNotExists")}} {{#link-to 'signup'}}{{format-message (intl-get "messages.auth.signin_form.signupLink")}}{{/link-to}}.</h4>
        </div>
    </div>
</div>
