<div class="container-fluid" style="padding-top: 100px">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <form class="form-horizontal" {{action 'authenticate' on='submit'}}>
              <div {{bind-attr class=":form-group isLoginError:has-error"}}>
                <label for="inputEmail" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  {{input id="loginEmail" class="form-control" type="email" value=identification placeholder="Email" required="required"}}
                </div>
              </div>
              <div {{bind-attr class=":form-group isLoginError:has-error"}}>
                <label for="inputPassword" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                  {{input id="loginPassword" class="form-control" type="password" value=password placeholder="Password" required="required"}}
                </div>
              </div>
              <div>
                  <div class="col-md-offset-4 col-md-4">{{#link-to 'forgot'}}forgot password?{{/link-to}}</div>
                  <div class="col-md-4">
                      <button type="submit" class="btn btn-signin">SIGN IN</button>
                  </div>
              </div>

            </form>
        </div>
    </div>
</div>
