{{#sidebar-hide condition=invisibleSidebar}}
    <aside class="sidebar col-xs-5 col-sm-4 col-md-3 col-lg-3"
           data-spy="affix" data-offset-top="50"  >
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-9 no-padding">
                            <div class="dropdown dropdown-truecron">
                                <div class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        Choose workspace
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu" role="menu">
                                      {{#each organization in model.organizations}}
                                          <li class="dropdown-header">{{organization.name}}</li>
                                        {{#each workspace in organization.workspaces}}
                                            <li role="presentation"><a {{action "changeWorkspace" workspace}} role="menuitem" tabindex="-1" href="#">{{workspace.name}}</a></li>
                                        {{/each}}
                                      {{/each}}
                                        <li role="presentation" class="divider"><hr/></li>
                                        <li role="presentation">{{#link-to 'workspaces'}}Dashboard{{/link-to}}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 text-right no-padding">
                            <a class="btn btn-sm btn-truecron-icon"><i class="fa fa-cog fa-lg"></i></a>
                        </div>
                        <div class="col-md-6 text-left no-padding truecron-tab-margin">
                        {{#if showJobDetails}}
                            <a class="btn btn-signup" {{action 'backToJobsList'}}>Back to Jobs</a>
                        {{/if}}
                        </div>
                        <div class="col-md-6 text-right no-padding truecron-tab-margin"><a class="btn btn-signup"><i class="fa fa-plus fa-lg"></i> New Job</a></div>
                    </div>
                </div>
            </div>
          {{#if showJobDetails}}
              <div class="panel panel-default">
                  <div class="panel-heading truecron-panel-heading" role="tab" id="collapseListGroupHeading1">
                      <div class="row">
                          <div class="col-md-9">
                              <h4 class="panel-title">
                                  <a class="" data-toggle="collapse" href="#collapseListGroup1" aria-expanded="true" aria-controls="collapseListGroup1">
                                      <p class="truecron-tab-p"><span class="caret truecron-caret"></span>Run History</p>
                                  </a>
                              </h4>
                          </div>
                          <div class="col-md-3 text-right">
                              <a class="btn btn-sm btn-truecron-icon"><i class="fa fa-filter fa-lg"></i></a>
                          </div>
                      </div>
                  </div>
                  <div id="collapseListGroup1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="collapseListGroupHeading1" aria-expanded="true">
                      <ul class="list-group">
                          <li class="list-group-item truecron-sub-filter">
                              <div class="row">
                                  <div class="col-xs-12">
                                      <p class="form-control-static">Date Range</p>
                                  </div>
                                  <div class="col-xs-6">
                                      <input type="date" class="form-control truecron-form-control" placeholder=".col-xs-6">
                                  </div>
                                  <div class="col-xs-6">
                                      <input type="date" class="form-control truecron-form-control" placeholder=".col-xs-6">
                                  </div>
                                  <div class="col-xs-12">
                                      <p class="form-control-static">Changed by</p>
                                  </div>
                                  <div class="col-xs-6">
                                      <div class="dropdown">
                                          <button class="btn btn-default truecron-dropdown dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                                              --
                                              <span class="caret truecron-caret caret-right"></span>
                                          </button>
                                          <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Action</a></li>
                                              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Another action</a></li>
                                              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Something else here</a></li>
                                              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>
                                          </ul>
                                      </div>
                                  </div>
                              </div>
                          </li>
                          <li class="list-group-item truecron-sub-menu">
                              <div class="row">
                                  <div class="col-md-4">Triggerd by<i class="fa fa-sort"></i></div>
                                  <div class="col-md-4 text-center">Date<i class="fa fa-sort-desc"></i></div>
                                  <div class="col-md-4 text-right">Duration<i class="fa fa-sort"></i></div>
                              </div>
                          </li>
                          <li class="list-group-item truecron-tab-normal">
                              <div class="row">
                                  <div class="col-md-4">Schedule</div>
                                  <div class="col-md-4 text-center">Jul 10 10:43:34</div>
                                  <div class="col-md-4 text-right">2.34s</div>
                              </div>
                          </li>
                          <li class="list-group-item truecron-tab-active">
                              <div class="row">
                                  <div class="col-md-4">Lev Kurts</div>
                                  <div class="col-md-4 text-center">Jul 5 12:32:00</div>
                                  <div class="col-md-4 text-right">0.68s</div>
                              </div>
                          </li>
                          <li class="list-group-item truecron-tab-normal">
                              <div class="row">
                                  <div class="col-md-4">Schedule</div>
                                  <div class="col-md-4 text-center">Jul 10 10:43:34</div>
                                  <div class="col-md-4 text-right">2.34s</div>
                              </div>
                          </li>
                          <li class="list-group-item truecron-tab-failed">
                              <div class="row">
                                  <div class="col-md-4">Schedule</div>
                                  <div class="col-md-4 text-center">Jul 2 12:32:34</div>
                                  <div class="col-md-4 text-right">0.68s</div>
                              </div>
                          </li>
                      </ul>
                  </div>
              </div>
          {{else}}
              <div class="list-group">
                {{#each job in model.jobs}}
                  {{job-list-item job=job linkTo='jobs.job' action='selectJob'}}
                {{/each}}
              </div>
          {{/if}}
        </div>
    </aside>
{{/sidebar-hide}}
<div class="container-fluid">
    <section class="col-xs-offset-5 col-sm-offset-4 col-md-offset-3 col-xs-7 col-sm-8 col-md-9 col-lg-9">
      {{outlet}}
    </section>
</div>
