{{!--<a href="#" class="list-group-item">--}}
<div class="row">
    <div class="col-md-10">
        <h4 class="list-group-item-heading">{{job.name}}</h4>
    </div>
    <div {{bind-attr class=":col-md-2 :text-right jobStateColorClass"}}>
        <span><i {{bind-attr class=":fa jobStateIconClass"}}></i></span>
    </div>
</div>
{{!--<p class="list-group-item-text">{{job.rrule}}</p>--}}
<p class="list-group-item-text">schedule: {{recurrence.text}}</p>
<p class="list-group-item-text">last run: {{format-relative recurrence.lastRun}}</p>
<p class="list-group-item-text">time left to next run: {{format-relative recurrence.nextRun}}</p>
<p class="list-group-item-text">
  {{#each tag in job.tags}}
      <span class="label label-default">{{tag.name}}</span>
  {{/each}}
</p>
{{yield}}
{{!--</a>--}}
